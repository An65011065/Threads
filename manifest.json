{
    "manifest_version": 3,
    "name": "LINKx",
    "version": "1.0.0",
    "description": "Visualize your browsing sessions as an interactive network graph",

    "permissions": ["tabs", "storage", "webNavigation"],

    "background": {
        "service_worker": "background.js"
    },

    "action": {
        "default_popup": "popup.html",
        "default_title": "Browsing Graph",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },

    "web_accessible_resources": [
        {
            "resources": ["graph.html", "graph.css", "graph.js"],
            "matches": ["<all_urls>"]
        }
    ],

    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
